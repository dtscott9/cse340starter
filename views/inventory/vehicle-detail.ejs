<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <% if (message) { %>
<p class="notice"><%= message %></p>
<% } %> <% if (data.length > 0) { %> <% data.forEach((vehicle)=>{ %>
<div class="vehicle">
  <img src="<%= vehicle.inv_image %>" alt="Image of <%= vehicle.inv_image %>" />
  <div class="info">
    <h2>
      Price: $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price)%>
    </h2>
    <h3>
      Description:<span class="desc"> <%= vehicle.inv_description %></span>
    </h3>
    <h3>Color:<span class="desc"> <%= vehicle.in_color %></span></h3>
    <h3>Miles:<span class="desc"> <%= vehicle.inv_miles %></span></h3>
  </div>
</div>
<% }) %> <%} else { %>
<p class="notice">Sorry, no matching vehicles could be found.</p>
<% } %>
