<% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %> <% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %> <% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>
    
    <form class="login" action="/client/updateAccount" method="post">
      <label for="client_firstname">First name</label>
      <input name="client_firstname" id="client_firstname" type="text" required value="<%= locals.client_firstname %>" />
      <label for="client_lastname">Last name</label>
      <input name="client_lastname" id="client_lastname" type="text" required value="<%= locals.client_lastname %>" />
      <label for="client_email">Email address</label>
      <input type="email" id="client_email" name="client_email" required value="<%= locals.client_email %>"/>
      <input type="hidden" name="client_id"
    <% if(locals.client_id) { %> value="<%= locals.client_id %>"
    <% } %>>
      <input class="submit" type="submit" value="Update Account" />
    </form>
    <form action="/client/changePassword" method="post">
        <label for="client_password">Password</label>
        <div id="passwdRules">
            Please include at least 12 characters, with one uppercase character, 1
            special character, and 1 nubmer
          </div>
          <input
            name="client_password"
            id="client_password"
            type="password"
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
            required
          />
          <p>*Note your old password will not work after this</p>
          <input type="hidden" name="client_id"
          <% if(locals.client_id) { %> value="<%= locals.client_id %>"
          <% } %>>
          <input class="submit" type="submit" value="Change Password" />
    </form>
    